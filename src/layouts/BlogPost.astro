---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Container from '../components/Container.astro';
import Body from '../components/Body.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import TOC from '../components/TOC.astro';

type Props = CollectionEntry<'blog'>['data'] & {
  headings?: { depth: number; slug: string; text: string }[];
};

const { title, description, pubDate, updatedDate, heroImage, categories = [], tags = [], headings = [] } = Astro.props as Props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
        <link href="/codeblock.css" rel="stylesheet" />
	</head>

	<Body>
		<Header />
		<main class="pt-[100px]">
			<Container>
                <Breadcrumbs categories={categories} title={title} />
                {heroImage && <img class="rounded-2xl mb-6" width={720} height={360} src={heroImage} alt="" />}
                <h1 class="text-3xl md:text-4xl font-bold font-mplus leading-tight">{title}</h1>
                <div class="mt-3 text-sm text-zinc-600 dark:text-zinc-400 flex flex-wrap items-center gap-3">
                    <FormattedDate date={pubDate} />
                    {updatedDate && (
                        <div class="italic">
                            Updated <FormattedDate date={updatedDate} />
                        </div>
                    )}
                </div>

                {tags.length > 0 && (
                  <div class="mt-3 flex flex-wrap gap-2">
                    {tags.map((t) => (
                      <a href={`/tags/${t.toLowerCase().replace(/\s+/g,'-')}`}
                         class="tag-pill">#{t}</a>
                    ))}
                  </div>
                )}

                <div class="mt-6 relative">
                    <TOC headings={headings} variant="inline" />
                    <article class="post-content">
                        <slot />
                    </article>
                    <div class="hidden lg:block toc-fixed">
                        <TOC headings={headings} variant="sidebar" />
                    </div>
                </div>
			</Container>
		</main>
		<Footer />
	</Body>
</html>
